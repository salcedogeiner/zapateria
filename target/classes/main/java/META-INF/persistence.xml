<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="zapateria" transaction-type="RESOURCE_LOCAL">
		<class>org.zapateria.entidad.Calzado</class>
		<class>org.zapateria.entidad.Concepto</class>
		<class>org.zapateria.entidad.EstadoReparacion</class>
		<class>org.zapateria.entidad.Insumo</class>
		<class>org.zapateria.entidad.IsumoReparacion</class>
		<class>org.zapateria.entidad.Pago</class>
		<class>org.zapateria.entidad.Persona</class>
		<class>org.zapateria.entidad.Privilegio</class>
		<class>org.zapateria.entidad.Reparacion</class>
		<class>org.zapateria.entidad.Rol</class>
		<class>org.zapateria.entidad.RolPrivilegio</class>
		<class>org.zapateria.entidad.RolUsuario</class>
		<class>org.zapateria.entidad.TipoIdentificacion</class>
		<class>org.zapateria.entidad.Usuario</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/zapateria"/>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="postgres"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
